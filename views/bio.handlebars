    <main>
        <div class="container mt-3">
            <div class="row">
                <div class="col">
                    <img src="images/profile.jpg" class="img-thumbnail profile" alt="...">
                </div>
                <div class="col">
                  
                    <form action="">
                        <fieldset>
                        <textarea name="" class="form-control mb-3" id="" cols="30" rows="10"></textarea>
                    </fieldset>
                     </form>
                </div>
                <div class="container">
                    <!-- Button to Open the Modal -->
                    <button type="button" class="btn btn-primary btn-sm edit-btn" data-toggle="modal" data-target="#myModal" style="font-size: 0.8rem !important;">
